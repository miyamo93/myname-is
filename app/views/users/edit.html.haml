#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .signup-body__box
          .signup-body__image
            = f.label :image do
              .signup-body__image--box
                %pre
                  Click
                  Image
                  Upload
            = f.file_field :image, autofocus: true ,class: 'input-image'
          .signup-body__name
            = f.label :nickname
            %br/
            = f.text_field :nickname, autofocus: true, maxlength: "10"
        #preview
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .actions
          = f.submit "Update", class: 'update-btn'
        = link_to "Logout", destroy_user_session_path, method: :delete, class: 'btn'
        = link_to "HOME", :back, class: 'btn'