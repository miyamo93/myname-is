.wrapper
  .main-header
    %h1
    .main-headers
      - if user_signed_in?
        .main-headers__signup
          = link_to "Mypage", groups_path, class: 'get'
        .main-headers__login
          = link_to "Logout", destroy_user_session_path, method: :delete
      - else
        .main-headers__signup
          = link_to "Signup", new_user_registration_path, class: 'post'
        .main-headers__login
          = link_to "Login", new_user_session_path, class: 'post'
  .main-body
    .main-body__center
      .sticker
        .sticker__header
          .sticker__header--up
            HELLO
          .sticker__header--down
            my name is
        .sticker__body
          .sticker__body--text
            WHO ARE YOU?
