.wrapper
  /#チャットページのヘッダー
  .chat-header
    %h1
      = link_to root_path  do
        HOME
    %ul
      %li
        = link_to "" do
          %span
            Search
      %li
        = link_to "" do
          %span
            Friend
  /#チャットスペース
  .chat-body
    .chat-body__sub
      .chat-sidebar
        .user-box
          .user-name
            = current_user.nickname
          = link_to  new_group_path do 
            %i.far.fa-edit.user-icon
          = link_to edit_user_path(current_user) do  
            %i.fas.fa-cog.user-icon
        = link_to "" do 
          .group-box
            .group-name
              yuzuki
            .group-messages
              メッセージはありません
            %i.fas.fa-chevron-right.group-icon
      .chat-main
        .chat-main__body
          .chat-box
            .chat-box__me
              =render 'shared/message'
            .chat-box__you
              =render 'shared/message'
        = form_with model: @item, class: 'chat-main__form' do |f|
          .chat-main__form--box
            = f.text_field :image, name: 'message', id: "chat-input", class: "chat-input", 'data-image': 0
            %label{class: "input-box__image"}
              %i.fas.fa-image.image-icon
              %input.input-image{type: "file"}
            .massage-send
              = f.submit nil, class: 'message-btn' ,id:"message-btn" ,value: "Send"
