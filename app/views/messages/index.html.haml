.wrapper
  /#チャットページのヘッダー
  .chat-header
    %h1
      = link_to root_path  do
        HOME
    .chat-header__box
      .chat-header__box--group
        = @group.name
      .chat-header__box--member
        Member :
        - @group.group_users.each do |group_user|
          .chat-header__box--member__text
            = group_user.user.nickname
    .chat-header__edit
      = link_to edit_group_path(@group) do
        .chat-header__edit--text
          Edit
  /#チャットスペース
  .chat-body
    .chat-body__sub
      .chat-sidebar
        .user-box
          .user-name
            = current_user.nickname
          = link_to  new_group_path do 
            %i.far.fa-edit.user-icon
          = link_to edit_user_path(current_user) do  
            %i.fas.fa-cog.user-icon
        - current_user.groups.each do |group|
          .group-box
            = link_to group_messages_path(group) do 
              .group-name
                = group.name
              .group-messages
                = group.show_last_message
              %i.fas.fa-chevron-right.group-icon
      .chat-main
        .chat-main__body
          .chat-box
            .chat-box__me
              = render  @messages
            -# .chat-box__you
            -#   = render  @messages
        = form_for [@group, @message] do |f|
          .chat-main__form
            .chat-main__form--box
              = f.text_field :content,  id: "chat-input", class: "chat-input", placeholder: 'type a message'
              = f.label :image, class: 'input-box__image' do
                %i.fas.fa-image.image-icon
                = f.file_field :image, class: 'input-image'
              .massage-send
                = f.submit nil, class: 'message-btn' ,id:"message-btn" ,value: "Send"