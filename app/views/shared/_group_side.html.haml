.chat-sidebar
  .user-box
    .user-image
      = image_tag ("#{current_user.image}")
    .user-name
      = current_user.nickname
    = render 'shared/menu'
  .group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do 
        .group-box
          .group-name
            = group.name
          .group-messages
            = group.show_last_message
          %i.fas.fa-chevron-right.group-icon
