.wrapper
  .tweets-body
    .tweets-body__sub
      .tweets-sidebar
        .user-box
          .user-name
            = current_user.nickname
          = render 'shared/menu'
        .tweets-sidebar__image
          = image_tag ("#{current_user.image}"), class: 'tweets-sidebar__image--box'
        .tweets-sidebar__menu
          = link_to new_tweet_path do
            %i.fas.fa-comment
      .tweets-main
        .tweets-main__body
          = render  @tweets